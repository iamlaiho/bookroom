<!DOCTYPE html>
<html>
  <head>
    <title>Bookroom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'style' %>
  </head>

  <body>
    <div class="container-fiuld">
      <div class="main">

        <% if !session[:user_id].blank? %>
          <nav class="navbar navbar-default">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data toggle="collapse" data-target="navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle</span>
                <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand"><%= link_to "The Interesting Company", bookings_path(id: @user) %></div>
              </div>
              <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                  <li class="dropdown">
                    <button class="dropbtn"><%= session[:user_name] %></button>
                    <div class="dropdown-content">
                      <%= link_to "Booking History", bookings_path %>
                      <%= link_to "Sign out", home_path %>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        <% end %>
      
        <%= yield %>
        <footer class="footer">
          <div class="container">
          <div class="copyright-text pull-right">
            Â© The Interesting Company 2018
          </div>
        </div>
        </footer>
      </div>
    </div>
  </body>

</html>
